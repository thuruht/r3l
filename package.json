{
  "name": "r3l",
  "version": "1.0.0",
  "description": "R3L:F - Research Ecosystem for Living Futures - Realigned with original Rel-F vision",
  "private": true,
  "type": "module",
  "scripts": {
    "deploy": "npm run build && wrangler deploy",
    "dev": "vite",
    "start:worker": "wrangler dev",
    "build": "vite build",
    "clean": "rm -rf dist",
    "test": "jest --passWithNoTests",
    "format": "prettier --write '**/*.{js,ts,css,json,md}'",
    "lint": "eslint -c .eslintrc.cjs 'src/**/*.js'",
    "lint:fe": "eslint -c .eslintrc.fe.cjs 'public/js/**/*.js'",
    "lint:fix": "eslint -c .eslintrc.cjs 'src/**/*.js' --fix && eslint -c .eslintrc.fe.cjs 'public/js/**/*.js' --fix",
    "qa:fe": "node scripts/frontend-check.js"
  },
  "author": "jelicopter",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250712.0",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@types/d3": "^7.1.0",
    "@types/dompurify": "^3.0.5",
    "@types/gsap": "^1.20.2",
    "@types/leaflet": "^1.9.8",
    "@types/marked": "^5.0.2",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.5",
    "jest": "^29.7.0",
    "postcss": "^8.5.6",
    "prettier": "^3.0.3",
    "process": "^0.11.10",
    "rollup": "^4.45.0",
    "rollup-plugin-copy": "^3.5.0",
    "three": "^0.178.0",
    "vite": "^7.1.9",
    "wrangler": "^3.91.0"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.2.2",
    "bcryptjs": "^3.0.2",
    "d3": "^7.8.5",
    "dompurify": "^3.2.6",
    "gsap": "^3.12.5",
    "hono": "^4.9.8",
    "leaflet": "^1.9.4",
    "marked": "^11.1.1",
    "zod": "^3.25.76"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
